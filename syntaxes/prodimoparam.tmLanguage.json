{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ProDiMo Parameter.in",
    "scopeName": "text.prodimoparam",
	"patterns": [
            {
                "name": "comment.line.prodimoparam",
                "match": "^---.*$|^\\*\\*\\*.*$"
            },    
            { 
                "name": "meta.line.prodimoparam",
                "match": "^(?!---|\\*\\*\\*)(\\S*)(?:\\s*) (! [^\\s]+)\\s*(\\[\\S*\\]|)\\s*(: .*|)",
                "captures": {
                    "1": {
                        "name": "string.unquoted.prodimoparam"
                    },
                    "2": {
                        "name": "keyword.other.param.prodimoparam"
                    },
                    "3": {
                        "name": "keyword.other.unit.prodimoparam"
                    },
                    "4": {
                        "name": "comment.documentation.prodimoparam"
                    }
                }
            },
            {
                "include": "#strings"
            }],
    "repository": { 
		"strings": {
			"name": "string.quoted.double.prodimoparam",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.prodimoparam",
					"match": "\\\\."
				}
			]
		}
	}	
}