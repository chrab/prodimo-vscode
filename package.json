{
  "name": "prodimo-vscode",
  "displayName": "ProDiMo - Tools",
  "description": "VS Code tools for ProDiMo",
  "version": "0.1.1",
  "preview": true,
  "publisher": "chrab",
  "author" : {
    "name": "Christian Rab"
  },
  "license": "CC0 1.0",  
  "repository": {
    "type": "git",
    "url": "https://github.com/chrab/prodimo-vscode"
  },
  "icon": "images/P.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },  
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [{
      "id": "prodimoparam",
      "aliases": ["ProDiMo Parameter.in", "prodimoparam"],
      "extensions": [".in"],
      "configuration": "./language-configuration.json"
    },
    {
      "id": "prodimolog",
      "aliases": ["ProDiMo logfile", "prodimo.log"],
      "filenamePatterns": ["**/*prodimo*.log","*prodimo*.log"],
      "firstLine": "^ {27}o",
      "configuration": "./language-configuration-log.json"
    }],
    "grammars": [{
      "language": "prodimoparam",
      "scopeName": "text.prodimoparam",
      "path": "./syntaxes/prodimoparam.tmLanguage.json"
    }],
    "configurationDefaults": {
      "[prodimoparam]": {
        "editor.wordWrap": "off",
        "editor.quickSuggestions": {
          "comments": "off",
          "strings": "off",
          "other": "off"
        }
      }
    }
  },
"scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }  
}
